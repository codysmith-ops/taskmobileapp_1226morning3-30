{
  "name": "MobileTodoList",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json}\"",
    "type-check": "tsc --noEmit",
    "start": "react-native start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "pods": "cd ios && pod install",
    "pods:clean": "cd ios && rm -rf Pods Podfile.lock && pod install",
    "ios:clean": "cd ios && xcodebuild clean && rm -rf build",
    "pre-commit": "lint-staged && npm run type-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "^8.5.1",
    "@react-native-community/geolocation": "^3.4.0",
    "@react-native-voice/voice": "^3.2.4",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "geolib": "^3.3.4",
    "nanoid": "^5.1.6",
    "react": "18.3.1",
    "react-native": "0.76.5",
    "react-native-config": "^1.5.3",
    "react-native-gesture-handler": "^2.21.2",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-image-picker": "^8.2.1",
    "react-native-svg": "^15.15.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@react-native-community/cli": "^15.1.3",
    "@react-native/babel-preset": "0.76.5",
    "@react-native/eslint-config": "0.76.5",
    "@react-native/metro-config": "0.76.5",
    "@react-native/typescript-config": "0.76.5",
    "@types/react": "^18.3.18",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.4.2",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
